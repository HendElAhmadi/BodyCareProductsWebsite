<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
          xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                      https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" 
        version="5.0" metadata-complete="true">
  
  <servlet>
    <servlet-name>AddProductServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.AddProductControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>RegisterUserControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.RegisterUserControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LoginControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.LoginControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CheckEmailAjaxServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.ajaxservlet.CheckEmailAjaxServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CategoryLoadAjaxServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.ajaxservlet.CategoryLoadAjaxServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AddCategoryServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.AddCategoryServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LogoutControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.LogoutControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ForgetPasswordControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.ForgetPasswordControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ValidateOtpControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.ValidateOtpControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UpdatePasswordControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.UpdatePasswordControllerServlet</servlet-class>
</servlet>
  
<servlet>
    <servlet-name>VerifyCode</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.VerifyCodeControllerServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ProductLoadControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.ProductLoadControllerServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddProductServlet</servlet-name>
    <url-pattern>/addproduct</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RegisterUserControllerServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CheckEmailAjaxServlet</servlet-name>
    <url-pattern>/checkemail</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CategoryLoadAjaxServlet</servlet-name>
    <url-pattern>/categoryload</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LogoutControllerServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LoginControllerServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ForgetPasswordControllerServlet</servlet-name>
    <url-pattern>/forgetpassword</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ValidateOtpControllerServlet</servlet-name>
    <url-pattern>/validateotp</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UpdatePasswordControllerServlet</servlet-name>
    <url-pattern>/updatepassword</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>VerifyCode</servlet-name>
    <url-pattern>/verify</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>AddCategoryServlet</servlet-name>
    <url-pattern>/addcategory</url-pattern>
  </servlet-mapping>

  
  <servlet-mapping>
    <servlet-name>ProductLoadControllerServlet</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>


  <!-- ////////////  Filters ///////// -->

  <filter>
    <filter-name> LoginPageFilter </filter-name>
    <filter-class> gov.iti.jets.presentation.filters.inputvalidationfilters.LoginPageFilter </filter-class>
  </filter>


  <filter-mapping>
      <filter-name> LoginPageFilter </filter-name>
      <url-pattern> /login </url-pattern>
  </filter-mapping>


  <filter>
    <filter-name> RegisterPageFilter </filter-name>
    <filter-class> gov.iti.jets.presentation.filters.inputvalidationfilters.RegisterPageFilter </filter-class>
  </filter>

  <filter-mapping>
    <filter-name> RegisterPageFilter </filter-name>
    <url-pattern> /register </url-pattern>
  </filter-mapping>


  <filter>
    <filter-name> AddCategoryPageFilter </filter-name>
    <filter-class> gov.iti.jets.presentation.filters.inputvalidationfilters.AddCategoryPageFilter  </filter-class>
  </filter>

  <filter-mapping>
    <filter-name> AddCategoryPageFilter </filter-name>
    <url-pattern> /addcategory </url-pattern>
  </filter-mapping>


  <filter>
    <filter-name> AddProductPageFilter </filter-name>
    <filter-class> gov.iti.jets.presentation.filters.inputvalidationfilters.AddProductPageFilter </filter-class>
  </filter>

  <filter-mapping>
    <filter-name> AddProductPageFilter </filter-name>
    <url-pattern> /addproduct </url-pattern>
  </filter-mapping>


  <filter>
    <filter-name> ContactPageFilter </filter-name>
    <filter-class> gov.iti.jets.presentation.filters.inputvalidationfilters.ContactPageFilter </filter-class>
  </filter>

  <filter-mapping>
    <filter-name> ContactPageFilter </filter-name>
    <url-pattern> /contact </url-pattern>
  </filter-mapping>


  <!--  //////////// Listenrns  ////////  -->

  <listener>
    <listener-class> gov.iti.jets.presentation.listeners.MyAppListener </listener-class>
</listener>

</web-app>