<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                      https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
  version="5.0" metadata-complete="true">
  <servlet>
    <servlet-name>AddProductServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.AddProductControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>RegisterUserControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.RegisterUserControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LoginControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.LoginControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CheckEmailAjaxServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.ajaxservlet.CheckEmailAjaxServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CategoryLoadAjaxServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.ajaxservlet.CategoryLoadAjaxServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AddCategoryServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.AddCategoryServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LogoutControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.LogoutControllerServlet</servlet-class>
  </servlet>

  <servlet>

    <servlet-name>VerifyCode</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.VerifyCodeControllerServlet</servlet-class>
  </servlet>
  <servlet>

    <servlet-name>ProductLoadControllerServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.ProductLoadControllerServlet</servlet-class>

  </servlet>

  <servlet>

    <servlet-name>AddProductToCartServlet</servlet-name>
    <servlet-class>gov.iti.jets.presentation.servlets.AddProductToCartServlet</servlet-class>

  </servlet>

  <servlet-mapping>
    <servlet-name>AddProductServlet</servlet-name>
    <url-pattern>/addproduct</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RegisterUserControllerServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CheckEmailAjaxServlet</servlet-name>
    <url-pattern>/checkemail</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CategoryLoadAjaxServlet</servlet-name>
    <url-pattern>/categoryload</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LogoutControllerServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LoginControllerServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>VerifyCode</servlet-name>
    <url-pattern>/verify</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>AddCategoryServlet</servlet-name>
    <url-pattern>/addcategory</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>ProductLoadControllerServlet</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AddProductToCartServlet</servlet-name>
    <url-pattern>/addproducttocart</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class> gov.iti.jets.presentation.listeners.MyAppListener </listener-class>
  </listener>
  <listener>
    <listener-class> gov.iti.jets.presentation.listeners.SessionListener </listener-class>
  </listener>
</web-app>